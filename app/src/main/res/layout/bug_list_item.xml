<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/drawable_stats_bg">

    <TextView
        android:id="@+id/bugListItem_tv_bugNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bug_icon_bg"
        android:padding="4dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="TICK-2829"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bugListItem_tv_bugName"
        android:layout_below="@+id/bugListItem_tv_bugNumber"
        android:text="This is a sample bug name that can be used to demonstrate the app functionality"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bugListItem_tv_bugName">

        <ImageView
            android:id="@+id/bugListItem_iv_bugIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@drawable/bug_icon_bg"
            android:contentDescription="@string/bugDashboardFragment_iv_criticalBugsDescription"
            android:src="@drawable/ic_bug" />

        <TextView
            android:id="@+id/bugListItem_tv_bugDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/bugListItem_iv_bugIcon"
            android:layout_marginStart="15dp"
            android:text="Jan 4, 2023" />


    </RelativeLayout>

</RelativeLayout>